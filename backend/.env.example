# Application
APP_NAME="Art Style Attribution Lab"
DEBUG=false

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/art_style_db

# JWT Authentication
SECRET_KEY=your-super-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Upload settings
MAX_UPLOAD_SIZE=10485760

# ===========================================
# ML Prediction Settings
# ===========================================
# Include "Unknown Artist" class in predictions
# Set to true if you want to show when model is uncertain
ML_INCLUDE_UNKNOWN_ARTIST=false

# Number of top predictions to return (3 or 4 recommended)
# Use 4 if ML_INCLUDE_UNKNOWN_ARTIST=true
ML_TOP_K=3

# ===========================================
# LLM Provider Configuration
# ==========================================
# Choose provider: "openai", "openrouter", "ollama"
LLM_PROVIDER=ollama

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# OpenRouter Configuration (access to many models via single API)
OPENROUTER_API_KEY=sk-or-your-openrouter-key
OPENROUTER_MODEL=anthropic/claude-3-haiku

# Ollama Configuration (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3

# LLM Generation Settings
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# ===========================================
# ComfyUI Configuration
# ===========================================
COMFYUI_ENABLED=true
COMFYUI_BASE_URL=http://127.0.0.1:8188
COMFYUI_TIMEOUT=120
# Checkpoint model name (leave empty to use workflow default)
# Example: realisticVisionV60B1_v51VAE.safetensors
COMFYUI_CHECKPOINT=
